
@model SecondAssignment.Application.Models.ProducerModel
@if (ViewBag.message is not null)
{
    <p class="alert-danger d-block text-center">@ViewBag.message</p>
}
<div class="row">
    <div class="col-8 offset-2">
        <div class=" bg-dark text-light">
            <h1 class="text-center"> Edit the Genre named @Model.Name</h1>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <section>
                    <form method="post" asp-controller="Producer" asp-action="EditProducer">

                        <input type="text" name="ProducersId" class="visually-hidden" value="@Model.ProducersId" />
                        <div class="mb-3">
                            <label for="Name" class="form-label"> Name</label>
                            <input type="text" name="Name" class="form-control" value="@Model.Name"/>
                        </div>
                        <div class="p-2">
                            <button asp-controller="Producer" asp-action="EditProducer" class="btn btn-primary  float-end  p-2 "> Save </button>
                            <a asp-controller="Producer" asp-action="Index" class="btn btn-outline-warning  float-end  p-2  mx-2"> Go Back </a>
                        </div>
                    </form>

                </section>

            </div>
        </div>
    </div>
</div>
