@model  SecondAssignment.Application.Models.SeriesModel

<div>
    <form method="post" asp-controller="Series" asp-action="DeleteSeries">
        <input type="hidden" name="SeriesId" value="@Model.SeriesId" />
        <h1>Are you sure you want to delete this series?</h1>
        <button type="submit" class="btn btn-danger float-end p-2">Delete</button>
        <a asp-controller="Series" asp-action="ManteningSeries" class="btn btn-outline-warning float-end p-2 mx-2">Go Back</a>
    </form>
</div>